# ============================================================================
# Keycloak Version & Base Configuration
# ============================================================================
KEYCLOAK_VERSION=26.4.7
KEYCLOAK_PORT=8080
KC_HOSTNAME=localhost
KC_HEALTH_ENABLED=true
KC_METRICS_ENABLED=true
KC_HTTP_ENABLED=true

# ============================================================================
# PostgreSQL Configuration - SENSITIVE DATA
# ============================================================================
# Database connection details
POSTGRES_DB=keycloak-custom
POSTGRES_USER=keycloak
# WARNING: Change POSTGRES_PASSWORD to a strong password in production!
POSTGRES_PASSWORD=changeme-strong-password-here

KC_DB_URL=jdbc:postgresql://postgres:5432/keycloak-custom
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=changeme-strong-password-here

# Database pool configuration
KC_DB_POOL_INITIAL_SIZE=50
KC_DB_POOL_MIN_SIZE=50
KC_DB_POOL_MAX_SIZE=50
QUARKUS_TRANSACTION_MANAGER_ENABLE_RECOVERY=true

# ============================================================================
# Keycloak Admin User - SENSITIVE DATA
# ============================================================================
# WARNING: Change these to strong, unique values in production!
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=changeme-strong-password-here

# ============================================================================
# Email SPI Configuration (Optional)
# ============================================================================
# Use custom email SPI or default
KC_SPI_EMAIL_PROVIDER=default

# ============================================================================
# Security Notes
# ============================================================================
# In production, set these environment variables securely:
# - Use a secrets management system (Kubernetes Secrets, AWS Secrets Manager, etc.)
# - Never commit actual passwords to version control
# - Use strong, unique passwords (minimum 16 characters recommended)
# - Rotate credentials regularly
# - Use HTTPS/TLS for all communications
# - Consider using OAuth2 proxy or API gateway for additional security
